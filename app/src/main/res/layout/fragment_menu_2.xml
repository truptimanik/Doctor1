<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"

    android:background="@drawable/custom_background"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <Button
        android:id="@+id/ButtonAddPill"
        android:layout_width="200dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="Add Pill" />

    <EditText
        android:id="@+id/editTextPillName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"

        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewPillLabel"
        android:layout_width="59dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-30dp"
        android:text="Pill:" />

    <CheckBox
        android:id="@+id/checkBoxMorning"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-50dp"
        android:textSize="20dp"
        android:text="Morning" />

    <CheckBox
        android:id="@+id/checkBoxNoon"
        android:layout_width="96dp"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:text="Noon" />

    <CheckBox
        android:id="@+id/checkBoxEve"
        android:layout_marginLeft="180dp"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:text="Evening" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/heading"
        android:gravity="center_horizontal"
        android:text="Pill List"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        />

    <ListView
        android:id="@+id/ListViewPill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

    </ListView>
</LinearLayout>